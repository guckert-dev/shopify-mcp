{
  "name": "Shopify MCP Server",
  "description": "The Definitive Model Context Protocol for Shopify. Empower Claude to securely reason, build, and orchestrate store operations with 128 Admin API tools across 24 categories.",
  "version": "1.0.0",
  "icon": "https://mcp.lemay.app/icon.svg",
  "homepage": "https://mcp.lemay.app",
  "repository": "https://github.com/guckert-dev/shopify-mcp-server",
  "transport": {
    "type": "stdio",
    "install": "npx @anthropic-ai/claude-code mcp add github:guckert-dev/shopify-mcp-server"
  },
  "auth": {
    "type": "environment",
    "variables": [
      {
        "name": "SHOPIFY_ACCESS_TOKEN",
        "description": "Your Shopify Admin API access token",
        "required": true
      },
      {
        "name": "SHOPIFY_SHOP_DOMAIN",
        "description": "Your store domain (e.g., your-store.myshopify.com)",
        "required": true
      }
    ]
  },
  "capabilities": {
    "tools": 128,
    "categories": [
      "Orders",
      "Products",
      "Customers",
      "Inventory",
      "Fulfillments",
      "Discounts",
      "Marketing",
      "Analytics",
      "Shop",
      "Metafields",
      "Webhooks",
      "Shipping",
      "Locations",
      "Collections",
      "Pages",
      "Blogs",
      "Redirects",
      "ScriptTags",
      "Themes",
      "Markets",
      "Files",
      "Policies",
      "Gift Cards",
      "Order Risks"
    ]
  },
  "publisher": {
    "name": "LeMay",
    "url": "https://x.com/GuckertTravis",
    "email": "tguckert@lemay.app"
  }
}
